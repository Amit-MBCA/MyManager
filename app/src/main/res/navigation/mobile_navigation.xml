<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mymanager.fragments.home.homefrag"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_homefrag" />

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.example.mymanager.fragments.tasks.tasksfrag"
        android:label="@string/title_tasks"
        tools:layout="@layout/fragment_tasksfrag" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.mymanager.fragments.profile.profilefrag"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profilefrag" />
    <fragment
        android:id="@+id/navigation_about"
        android:name="com.example.mymanager.fragments.about.aboutfrag"
        android:label="@string/title_about"/>
</navigation>